@model IEnumerable<SneakerSeeker3.Models.ItemReview>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemReviewId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemReviewId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemReviewId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
