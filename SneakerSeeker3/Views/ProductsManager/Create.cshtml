@model SneakerSeeker3.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SKU" class="control-label"></label>
                <input asp-for="SKU" class="form-control" />
                <span asp-validation-for="SKU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="file-error text-danger"></span>
                <div id="fileUploadZone" class="dropzone-area dz-clickable">
                    <div class="dz-message needsclick">
                        Drop files here or click to upload.<br>
                        <span class="note needsclick">(The image files will be uploaded to the server.)</span>
                    </div>
                </div>
                <span asp-validation-for="ProductURL" class="text-danger"></span>
                <input asp-for="ProductURL" class="image-path form-control" style="visibility:hidden; height:1px" />
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label"></label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ItemSizeId" class="control-label"></label>
                <select asp-for="ItemSizeId" class="form-control" asp-items="ViewBag.ItemSizeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ItemColorId" class="control-label"></label>
                <select asp-for="ItemColorId" class="form-control" asp-items="ViewBag.ItemColorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="~/js/dropzone.js"></script>
<script>
    $(document).ready(function () {
        var myDropzone = new Dropzone("#fileUploadZone", { url: "@(Url.Action("UploadAsync", "Home"))" });

        myDropzone.on("complete", function (file) {
            if (file.xhr.status == 200) {
                let filePath = JSON.parse(file.xhr.response).filePath;
                $(".image-path").val(filePath);
                $(".image-path").removeAttr("data-val");
                $(".field-validation-error[data-valmsg-for='ProductURL']").html("");
            } else {
                $(".file-error").html("Sorry, the file could not be uploaded. Please try again later.");
            }
        });
        myDropzone.on("addedfile", function (file) {
            $(".dz-success-mark").remove();
            $(".dz-error-mark").remove();
            file.previewElement.addEventListener("click", function () {
                myDropzone.removeFile(file);
            });
        });
    });
</script>
}
