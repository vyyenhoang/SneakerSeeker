<!-- Thumbnails -->
<div class="container thumbs">
    @foreach (var product in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@(product.ProductURL)" alt="" class="img-rounded">
                <div class="caption">
                    <h3 class="text-center">@(product.ProductName)</h3>
                    <p>@(product.ProductDescription)</p>
                    <div class="btn-toolbar text-center">
                        <a href="@Url.Action("Details", "ProductsManager", new { Id = product.ProductId })" role="button" class="btn btn-success">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div><!-- End Thumbnails -->