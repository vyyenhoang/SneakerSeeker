@model SneakerSeeker3.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Details</h1>

<form asp-action="AddToCart">
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitPrice)
            </dd>
            <dt class="col-sm-2">
                Quantity: *
            </dt>
            <dd class="col-sm-10">
                <input name="Quantity" id="Quantity" required type="number" min="1" />
                <input name="ProductId" id="ProductId" value="@Model.ProductId" type="hidden" />
            </dd>
        </dl>
    </div>
    <div class="offset-2">
        <button class="btn btn-primary">Add to Cart</button>
        <a href="javascript:history.go(-1);" class="btn btn-primary"><< Back to List</a>
    </div>
</form>
