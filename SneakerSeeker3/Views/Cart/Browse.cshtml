@model IEnumerable<SneakerSeeker3.Models.Product>

@{
    ViewData["Title"] = "Our Product Collection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shop Our @ViewBag.Category</h1>

<section>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <a asp-controller="Cart" asp-action="ProductDetails" asp-route-product="@item.ProductName">@item.ProductName</a>
                        <h5>@String.Format("{0:c}", item.UnitPrice)</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
